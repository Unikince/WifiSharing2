<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:id="@+id/ll_opening"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:visibility="gone">
    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="180dp"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/icon_size_big"
        android:src="@drawable/connect_hotspot_enabled"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/tv_state"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_state"
        android:layout_marginTop="@dimen/medium_spacing"
        android:textSize="@dimen/sub_big_text"
        android:textColor="@color/sub_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotspot_opening"/>
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/rb_left"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:rb_color="@color/colorPrimary"
        app:rb_radius="12dp"
        app:rb_rippleAmount="2"
        app:rb_duration="1500"
        app:rb_scale="6"
        app:rb_type="strokeRipple"
        android:layout_alignTop="@id/iv_state"
        android:layout_toLeftOf="@id/iv_state"
        android:layout_marginRight="-86dp"
        android:layout_marginTop="-8dp"/>
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/rb_right"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:rb_color="@color/colorPrimary"
        app:rb_radius="12dp"
        app:rb_rippleAmount="2"
        app:rb_duration="1500"
        app:rb_scale="6"
        app:rb_type="strokeRipple"
        android:layout_alignTop="@id/iv_state"
        android:layout_toRightOf="@id/iv_state"
        android:layout_marginLeft="-86dp"
        android:layout_marginTop="-8dp"/>
</RelativeLayout>