<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_closed"
              android:visibility="gone"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="180dp"
        android:layout_height="@dimen/icon_size_big"
        android:src="@drawable/connect_hotspot_close_settings"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/tv_state"
        android:layout_marginTop="@dimen/medium_spacing"
        android:textSize="@dimen/sub_big_text"
        android:textColor="@color/sub_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotspot_closed"/>
    <Button
        android:id="@+id/btn_open_hotspot"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:background="@drawable/btn_blue_oval"
        android:layout_marginTop="@dimen/big_spacing"
        android:text="@string/open_soon"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/accent_white"/>
</LinearLayout>