<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/small_spacing"
              android:paddingBottom="@dimen/small_spacing"
              android:paddingRight="@dimen/medium_spacing"
              android:paddingLeft="@dimen/medium_spacing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_wifi_map"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv"
            android:textSize="@dimen/sub_big_text"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/sub_medium_spacing"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div"
        android:layout_marginTop="@dimen/small_spacing"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:gravity="center"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/sub_text_color"
        android:drawablePadding="@dimen/small_spacing"
        android:text="湖北省武汉市洪山区知行路15号"/>
    <TextView
        android:id="@+id/tv_update_time"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_time"
        android:gravity="center"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/sub_text_color"
        android:drawablePadding="@dimen/sub_small_spacing"
        android:text="更新时间：09-23 16:04"/>
    <TextView
        android:id="@+id/tv_user_count"
        android:layout_marginTop="@dimen/sub_small_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_user_count"
        android:gravity="center"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/sub_text_color"
        android:drawablePadding="@dimen/small_spacing"
        android:text="使用人次：12"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div"
        android:layout_marginTop="@dimen/small_spacing"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_spacing">
        <TextView
            android:id="@+id/tv_direction"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_directions_walk"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/sub_text_color"
            android:drawablePadding="@dimen/small_spacing"
            android:text="209m"/>
        <TextView
            android:id="@+id/tv_go"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_go"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/accent_blue"
            android:drawablePadding="@dimen/small_spacing"
            android:text="去这里"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>