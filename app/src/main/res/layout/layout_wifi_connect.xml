<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/medium_spacing"
    android:paddingLeft="@dimen/medium_spacing"
    android:paddingRight="@dimen/medium_spacing">

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/sub_small_spacing"
        app:srcCompat="@drawable/ic_share_"/>

<LinearLayout
    android:id="@+id/ll_connected"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_wifi_sign"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_wifi_open"/>
        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_marginLeft="@dimen/small_spacing"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/sub_big_spacing">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_arrow_upward"/>
        <TextView
            android:id="@+id/tv_upload"
            android:layout_marginLeft="@dimen/s_small_spacing"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:text="0kb/s"
            android:textColor="@color/sub_text_color"/>
        <ImageView
            android:layout_marginLeft="@dimen/sub_medium_spacing"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_arrow_downward"/>
        <TextView
            android:id="@+id/tv_download"
            android:layout_marginLeft="@dimen/s_small_spacing"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:text="0kb/s"
            android:textColor="@color/sub_text_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_connect_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sub_big_spacing"
        android:textColor="?colorPrimary"
        android:gravity="center"
        android:textSize="@dimen/sub_medium_text"
        android:text="已连接设备：2 "
        android:background="@drawable/bg_tv_connect_count"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_spacing">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/div"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_security_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:padding="@dimen/sub_small_spacing"
            android:background="@color/accent_white"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/do_security_check"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/sub_big_spacing"
        android:paddingBottom="@dimen/sub_big_spacing">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_safety"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:background="@drawable/discover_security"
                android:focusable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:textSize="@dimen/medium_text"
                android:layout_marginTop="@dimen/small_spacing"
                android:text="@string/safety"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_signal"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:background="@drawable/discover_signal"
                android:focusable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:textSize="@dimen/medium_text"
                android:layout_marginTop="@dimen/small_spacing"
                android:text="@string/sign"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_speed"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:background="@drawable/discover_speed"
                android:focusable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:textSize="@dimen/medium_text"
                android:layout_marginTop="@dimen/small_spacing"
                android:text="@string/speed"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>

