<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lvqingyang.wifisharing.Wifi.connect.funcation.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/result_ok"
        android:padding="@dimen/huge_spacing"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="@dimen/icon_size_big"
            android:layout_height="@dimen/icon_size_big"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text"
            android:layout_marginTop="@dimen/big_spacing"
            android:textColor="@color/accent_white"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:textSize="@dimen/sub_medium_text"
            android:textColor="@color/sub_text_color_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/accent_white"
        android:layout_marginTop="@dimen/small_spacing"
        android:padding="@dimen/card_spacing">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sub_text_color"
            android:textSize="@dimen/sub_medium_text"
            android:text="@string/suggest_to"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/ll_security"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_item"
                    android:padding="@dimen/medium_spacing">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@mipmap/icon_security_check_guide"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_spacing"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/text_color"
                        android:text="@string/security"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_item"
                android:padding="@dimen/medium_spacing">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/icon_signal_enhance_guide"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/text_color"
                    android:text="@string/sign"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_item"
                android:padding="@dimen/medium_spacing">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/icon_speed_test_guide"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/text_color"
                    android:text="@string/speed"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
